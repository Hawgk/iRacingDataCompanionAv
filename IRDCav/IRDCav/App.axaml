<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="IRDCav.App"
             xmlns:local="using:IRDCav"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->
    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>
    <Application.Styles>
		<Style
			Selector="TextBlock.NotMe">
			<Setter
				Property="Foreground"
				Value="White"/>
			<Setter
				Property="FontWeight"
				Value="Normal"/>
		</Style>
		<Style
			Selector="TextBlock.IsMe">
			<Setter
				Property="Foreground"
				Value="DarkSalmon"/>
			<Setter
				Property="FontWeight"
				Value="Bold"/>
		</Style>
		<Style
			Selector="TextBlock.IsFastest">
			<Setter
				Property="Foreground"
				Value="Pink"/>
			<Setter
				Property="FontWeight"
				Value="Bold"/>
		</Style>
        <FluentTheme />
    </Application.Styles>
</Application>